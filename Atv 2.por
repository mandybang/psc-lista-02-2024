programa {
  funcao inicio() {
    inteiro numero1
    inteiro numero2
    real x, y, z
    escreva("Informe um número: ")
    leia(numero1)
    escreva("Informe outro número: ")
    leia(numero2)
    x = numero1+numero2
    y = numero1-numero2
    z = numero1*numero2
    escreva("A soma dos números é: "+ x + "\n" )
    escreva ("A subtração dos números é: " + y + "\n")
    escreva("A multiplicação dos números é: " + z )

  }
}
